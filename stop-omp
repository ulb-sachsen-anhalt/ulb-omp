#!/bin/bash                                                                                                                                                                                                                                                                                                                                                                                                                                                                               if  [ -z "$1" ] || ([ $1 != "dev" ] && [ $1 != "prod" ])                                                                                                                                                                                         then                                                                                                                                                                                                                                             echo "parameter 'dev' oder 'prod' fehlt "                                                                                                                                                                                                    exit 0                                                                                                                                                                                                                                                                                                                                                                                                                                                                            elif [ $1 != "dev" ]                                                                                                                                                                                                                             then                                                                                                                                                                                                                                             docker-compose -f docker-compose-omp-ulb.yml -p $1 down                                                                                                                                                                                      docker-compose -f docker-compose-omp-ulb.yml -p $1 up -d                                                                                                                                                                                                                                                                                                                                                                                                                          elif [ $1 != "prod" ]                                                                                                                                                                                                                            then                                                                                                                                                                                                                                             docker-compose -f docker-compose-ompdev-ulb.yml -p $1 down                                                                                                                                                                                   docker-compose -f docker-compose-ompdev-ulb.yml -p $1 up -d                                                                                                                                                                                                                                                                                                                                                                                                                       fi  

if  [ -z "$1" ] || ([ $1 != "dev" ] && [ $1 != "prod" ])
    then
        echo "Parameter 'dev' oder 'prod' fehlt"
        exit 0

elif [ $1 == "dev" ]
    then
        docker-compose -f docker-compose-ompdev-ulb.yml -p $1 down

elif [ $1 == "prod" ]
    then
        echo stop docker compose
        docker-compose -f docker-compose-ompprod-ulb.yml -p $1 down
fi

